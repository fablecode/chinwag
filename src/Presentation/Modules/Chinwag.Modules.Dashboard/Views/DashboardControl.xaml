        <ItemsControl ItemsSource="{Binding GlanceItems}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid IsItemsHost="True"
                                 Columns="2"
                                 VirtualizingPanel.IsVirtualizing="True" 
                                 VirtualizingPanel.VirtualizationMode="Recycling" 
                                 VirtualizingPanel.IsVirtualizingWhenGrouping="True" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="White" BorderThickness="1">
                        <controls:Tile Title="{Binding Label}"
                                       Margin="3"
                                       controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource MahApps.Brushes.ThemeForeground}"
                                       Background="{Binding Background}"
                                       Width="300" Height="150">
                            <StackPanel>
                                <iconPacks:PackIconControl Kind="{Binding Icon.Kind}"  HorizontalAlignment="Center"
                                                           Width="50"
                                                           Height="50"/>
                                <TextBlock Text="{Binding Count}" FontSize="50"/>
                            </StackPanel>
                        </controls:Tile>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
