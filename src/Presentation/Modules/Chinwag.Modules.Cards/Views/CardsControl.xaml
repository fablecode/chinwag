                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label>Banlist:</Label>
                        <ComboBox Grid.Column="1" Margin="0,0,0,10" />
                        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">Category:</Label>
                            <ComboBox Grid.Column="1" Margin="0,0,0,10" />
                            <ComboBox Grid.Column="2" Margin="10,0,0,10" />
                        </Grid>
                        <Label Grid.Row="2">Attribute:</Label>
                        <ComboBox Grid.Row="2" Grid.Column="1" Margin="0,0,0,10" />
                        <Label Grid.Row="3">Type:</Label>
                        <ComboBox Grid.Row="3" Grid.Column="1" Margin="0,0,0,10" />
                        <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">Lvl/Rank:</Label>
                            <TextBox Grid.Column="1" Margin="0,0,0,10" />
                            <Label Grid.Column="2">Scale:</Label>
                            <TextBox Grid.Column="3" Margin="0,0,0,10" />
                        </Grid>
                    </Grid>
                </Border>
                <Border Grid.Column="1" Margin="5">
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label>Limit:</Label>
                        <ComboBox Grid.Column="1" Margin="0,0,0,10" />
                        <Label Grid.Row="1">ATK:</Label>
                        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" />
                        <Label Grid.Row="2">DEF:</Label>
                        <TextBox Grid.Row="2" Grid.Column="1" Margin="0,0,0,10" />
                        <Label Grid.Row="3">Search:</Label>
                        <TextBox Grid.Row="3" Grid.Column="1" Margin="0,0,0,10" />
                        <Grid Grid.Row="4" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Margin="5,0,5,10">Clear</Button>
                            <Button Grid.Column="1" Margin="5,0,5,10">Search</Button>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
